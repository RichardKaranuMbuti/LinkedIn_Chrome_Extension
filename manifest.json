{
  "manifest_version": 3,
  "name": "LinkedIn Job Scraper",
  "version": "1.0.0",
  "description": "Extract job listings from LinkedIn with detailed information",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "downloads"
  ],
  
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": [
        "utils/constants.js",
        "utils/helpers.js",
        "content/job-extractor.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Job Scraper",
    "default_icon": {
      "16": "popup/icons/icon16.png",
      "48": "popup/icons/icon48.png",
      "128": "popup/icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "popup/icons/icon16.png",
    "48": "popup/icons/icon48.png",
    "128": "popup/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "assets/styles/*"
      ],
      "matches": [
        "https://*.linkedin.com/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}